<h3>Add New To-Do Item</h3>
<%= form_for @item do |f| %>
  <%= form_group_tag(item.errors[:name]) do %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Create name of item" %>
  <% end %>

  <div class="form-group">
    <%= f.submit "Create", class: 'btn btn-success' %>
  </div>
<% end %>
